            </div>

            <!-- Relat√≥rio de Performance -->
            <div class="report-card" onclick="generatePerformanceReport()">
                <div class="report-icon">‚ö°</div>
                <div class="report-title">Performance do Sistema</div>
                <div class="report-description">
                    M√©tricas de uso, cancelamentos, tempo m√©dio de reservas e efici√™ncia.
                </div>
                <span class="report-status status-development">Em Desenvolvimento</span>
            </div>

            <!-- Dashboard Executivo -->
            <div class="report-card" onclick="generateExecutiveReport()">
                <div class="report-icon">üìä</div>
                <div class="report-title">Dashboard Executivo</div>
                <div class="report-description">
                    Vis√£o consolidada com principais KPIs e m√©tricas estrat√©gicas.
                </div>
                <span class="report-status status-development">Em Desenvolvimento</span>
            </div>
        </div>

        <!-- Filtros para Relat√≥rios -->
        <div class="section" id="report-filters" style="display: none;">
            <h3>üîç Filtros do Relat√≥rio</h3>
            <div class="filters">
                <select id="periodFilter">
                    <option value="week">√öltima Semana</option>
                    <option value="month" selected>√öltimo M√™s</option>
                    <option value="quarter">√öltimo Trimestre</option>
                    <option value="year">√öltimo Ano</option>
                    <option value="custom">Per√≠odo Personalizado</option>
                </select>
                
                <input type="date" id="startDate" style="display: none;">
                <input type="date" id="endDate" style="display: none;">
                
                <select id="roomFilter">
                    <option value="">Todas as Salas</option>
                    <!-- Op√ß√µes ser√£o preenchidas via JavaScript -->
                </select>
                
                <button onclick="applyFilters()" class="btn-success">üìä Gerar Relat√≥rio</button>
                <button onclick="exportReport()" class="btn-secondary">üì• Exportar</button>
            </div>
        </div>

        <!-- √Årea de Resultados -->
        <div id="report-results" style="display: none;">
            <!-- Gr√°ficos -->
            <div class="section">
                <h3 id="report-title">Relat√≥rio</h3>
                <div class="chart-container" id="chart-area">
                    <div class="chart-placeholder">
                        <div style="font-size: 3rem; margin-bottom: 15px;">üìä</div>
                        <h4>Gr√°fico ser√° exibido aqui</h4>
                        <p>Selecione um relat√≥rio e aplique os filtros para visualizar os dados.</p>
                    </div>
                </div>
            </div>

            <!-- Tabela de Dados -->
            <div class="section">
                <h3>üìã Dados Detalhados</h3>
                <div id="data-table-container">
                    <table class="data-table" id="report-table" style="display: none;">
                        <thead id="table-head">
                            <!-- Cabe√ßalhos ser√£o inseridos via JavaScript -->
                        </thead>
                        <tbody id="table-body">
                            <!-- Dados ser√£o inseridos via JavaScript -->
                        </tbody>
                    </table>
                    <div id="no-data" style="text-align: center; padding: 40px; color: #666;">
                        <div style="font-size: 3rem; margin-bottom: 15px;">üìÑ</div>
                        <h4>Nenhum dado para exibir</h4>
                        <p>Gere um relat√≥rio para ver os dados detalhados aqui.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentUser = null;
        let currentReportType = null;
        let reportData = null;

        // Verificar autentica√ß√£o admin
        function checkAdminAuth() {
            try {
                const userStr = localStorage.getItem('user');
                if (!userStr) {
                    window.location.href = '/login';
                    return false;
                }
                
                const user = JSON.parse(userStr);
                if (!user.email || user.role !== 'admin') {
                    alert('‚ùå Acesso restrito para administradores!');
                    window.location.href = '/login';
                    return false;
                }
                
                currentUser = user;
                document.getElementById('admin-name').textContent = user.name;
                return true;
            } catch (error) {
                localStorage.removeItem('user');
                window.location.href = '/login';
                return false;
            }
        }

        // Logout
        function logout() {
            if (confirm('üö™ Tem certeza que deseja sair?')) {
                localStorage.removeItem('user');
                window.location.href = '/login';
            }
        }

        // Fun√ß√£o para fazer requisi√ß√µes API
        async function apiCall(endpoint, method = 'GET', data = null) {
            try {
                const options = {
                    method,
                    headers: { 'Content-Type': 'application/json' }
                };
                if (data) options.body = JSON.stringify(data);
                
                const response = await fetch(`/api${endpoint}`, options);
                const result = await response.json();
                
                if (!response.ok) {
                    throw new Error(result.error || `HTTP ${response.status}`);
                }
                
                return result;
            } catch (error) {
                throw error;
            }
        }

        // Mostrar alerta
        function showAlert(message, type = 'info') {
            const alert = document.getElementById('alert');
            alert.className = `alert alert-${type}`;
            alert.innerHTML = message;
            alert.style.display = 'block';
            
            if (type === 'success') {
                setTimeout(() => alert.style.display = 'none', 3000);
            }
        }

        // Gerar relat√≥rio de ocupa√ß√£o
        async function generateOccupancyReport() {
            currentReportType = 'occupancy';
            showReportSection('üìä Relat√≥rio de Ocupa√ß√£o de Salas');
            
            try {
                showAlert('‚è≥ Carregando dados de ocupa√ß√£o...', 'info');
                
                // Usar endpoint existente do dashboard
                const occupancyData = await apiCall('/dashboard/room-occupancy?periodo=mes');
                
                displayOccupancyData(occupancyData);
                showAlert('‚úÖ Relat√≥rio de ocupa√ß√£o gerado com sucesso!', 'success');
                
            } catch (error) {
                showAlert(`‚ùå Erro ao gerar relat√≥rio: ${error.message}`, 'error');
                displaySampleOccupancyData(); // Fallback com dados de exemplo
            }
        }

        // Gerar relat√≥rio de usu√°rios
        async function generateUsersReport() {
            currentReportType = 'users';
            showReportSection('üë• Relat√≥rio de Usu√°rios Mais Ativos');
            
            try {
                showAlert('‚è≥ Carregando dados de usu√°rios...', 'info');
                
                const usersData = await apiCall('/dashboard/users/top');
                
                displayUsersData(usersData);
                showAlert('‚úÖ Relat√≥rio de usu√°rios gerado com sucesso!', 'success');
                
            } catch (error) {
                showAlert(`‚ùå Erro ao gerar relat√≥rio: ${error.message}`, 'error');
                displaySampleUsersData(); // Fallback com dados de exemplo
            }
        }

        // Relat√≥rios em desenvolvimento
        function generateTimeReport() {
            showAlert('üöß Relat√≥rio de An√°lise Temporal em desenvolvimento!\n\nEm breve voc√™ poder√° visualizar tend√™ncias temporais detalhadas.', 'warning');
        }

        function generateTypesReport() {
            showAlert('üöß Relat√≥rio de Tipos de Sala em desenvolvimento!\n\nEm breve voc√™ poder√° analisar prefer√™ncias por tipo de sala.', 'warning');
        }

        function generatePerformanceReport() {
            showAlert('üöß Relat√≥rio de Performance em desenvolvimento!\n\nEm breve voc√™ ter√° m√©tricas completas de performance.', 'warning');
        }

        function generateExecutiveReport() {
            showAlert('üöß Dashboard Executivo em desenvolvimento!\n\nEm breve voc√™ ter√° uma vis√£o estrat√©gica consolidada.', 'warning');
        }

        // Mostrar se√ß√£o de relat√≥rio
        function showReportSection(title) {
            document.getElementById('report-title').textContent = title;
            document.getElementById('report-filters').style.display = 'block';
            document.getElementById('report-results').style.display = 'block';
            
            // Scroll para a se√ß√£o
            document.getElementById('report-filters').scrollIntoView({ behavior: 'smooth' });
        }

        // Exibir dados de ocupa√ß√£o
        function displayOccupancyData(data) {
            reportData = data;
            
            // Atualizar gr√°fico (placeholder)
            document.getElementById('chart-area').innerHTML = `
                <div style="text-align: center; padding: 40px;">
                    <div style="font-size: 3rem; margin-bottom: 15px;">üìä</div>
                    <h4>Ocupa√ß√£o de Salas - √öltimo M√™s</h4>
                    <p>Gr√°fico de barras seria exibido aqui com as taxas de ocupa√ß√£o por sala.</p>
                    <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; margin-top: 20px;">
                        <strong>Resumo:</strong> ${data.length} salas analisadas
                    </div>
                </div>
            `;
            
            // Atualizar tabela
            displayTable([
                'Sala',
                'Horas Reservadas',
                'Horas Totais',
                'Taxa de Ocupa√ß√£o'
            ], data.map(room => [
                room.name,
                Math.round(room.booked_hours || 0) + 'h',
                Math.round(room.total_hours || 0) + 'h',
                (room.occupancy_percentage || 0) + '%'
            ]));
        }

        // Exibir dados de usu√°rios
        function displayUsersData(data) {
            reportData = data;
            
            // Atualizar gr√°fico (placeholder)
            document.getElementById('chart-area').innerHTML = `
                <div style="text-align: center; padding: 40px;">
                    <div style="font-size: 3rem; margin-bottom: 15px;">üë•</div>
                    <h4>Top 10 Usu√°rios Mais Ativos</h4>
                    <p>Gr√°fico de barras seria exibido aqui com o ranking de usu√°rios.</p>
                    <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; margin-top: 20px;">
                        <strong>Resumo:</strong> ${data.length} usu√°rios analisados
                    </div>
                </div>
            `;
            
            // Atualizar tabela
            displayTable([
                'Posi√ß√£o',
                'Nome',
                'Email',
                'Total de Reservas',
                'Horas Utilizadas'
            ], data.map((user, index) => [
                (index + 1) + '¬∫',
                user.name,
                user.email,
                user.total_bookings || 0,
                Math.round(user.total_hours || 0) + 'h'
            ]));
        }

        // Exibir dados de exemplo (fallback)
        function displaySampleOccupancyData() {
            const sampleData = [
                { name: 'Sala de Reuni√£o A', booked_hours: 120, total_hours: 720, occupancy_percentage: 16.7 },
                { name: 'Audit√≥rio Principal', booked_hours: 45, total_hours: 720, occupancy_percentage: 6.3 },
                { name: 'Sala de Treinamento', booked_hours: 200, total_hours: 720, occupancy_percentage: 27.8 },
                { name: 'Sala de Videoconfer√™ncia', booked_hours: 95, total_hours: 720, occupancy_percentage: 13.2 }
            ];
            
            displayOccupancyData(sampleData);
        }

        function displaySampleUsersData() {
            const sampleData = [
                { name: 'Jo√£o Silva', email: 'joao@empresa.com', total_bookings: 15, total_hours: 45 },
                { name: 'Maria Santos', email: 'maria@empresa.com', total_bookings: 12, total_hours: 38 },
                { name: 'Pedro Costa', email: 'pedro@empresa.com', total_bookings: 10, total_hours: 30 },
                { name: 'Ana Oliveira', email: 'ana@empresa.com', total_bookings: 8, total_hours: 25 }
            ];
            
            displayUsersData(sampleData);
        }

        // Exibir tabela
        function displayTable(headers, rows) {
            const table = document.getElementById('report-table');
            const tableHead = document.getElementById('table-head');
            const tableBody = document.getElementById('table-body');
            const noData = document.getElementById('no-data');
            
            if (!rows || rows.length === 0) {
                table.style.display = 'none';
                noData.style.display = 'block';
                return;
            }
            
            // Cabe√ßalhos
            tableHead.innerHTML = '<tr>' + headers.map(header => `<th>${header}</th>`).join('') + '</tr>';
            
            // Linhas
            tableBody.innerHTML = rows.map(row => 
                '<tr>' + row.map(cell => `<td>${cell}</td>`).join('') + '</tr>'
            ).join('');
            
            table.style.display = 'table';
            noData.style.display = 'none';
        }

        // Aplicar filtros
        function applyFilters() {
            if (!currentReportType) {
                showAlert('‚ùå Selecione um tipo de relat√≥rio primeiro.', 'error');
                return;
            }
            
            const period = document.getElementById('periodFilter').value;
            showAlert(`üîç Aplicando filtros para per√≠odo: ${getPeriodText(period)}`, 'info');
            
            // Reexecutar o relat√≥rio atual com novos filtros
            switch(currentReportType) {
                case 'occupancy':
                    generateOccupancyReport();
                    break;
                case 'users':
                    generateUsersReport();
                    break;
            }
        }

        // Obter texto do per√≠odo
        function getPeriodText(period) {
            const periods = {
                'week': '√öltima Semana',
                'month': '√öltimo M√™s',
                'quarter': '√öltimo Trimestre',
                'year': '√öltimo Ano',
                'custom': 'Per√≠odo Personalizado'
            };
            return periods[period] || period;
        }

        // Exportar relat√≥rio
        function exportReport() {
            if (!reportData) {
                showAlert('‚ùå Nenhum relat√≥rio para exportar. Gere um relat√≥rio primeiro.', 'error');
                return;
            }
            
            showAlert('üì• Exportando relat√≥rio...', 'info');
            
            // Simular exporta√ß√£o
            setTimeout(() => {
                showAlert('‚úÖ Relat√≥rio exportado com sucesso!\n\nüöß Funcionalidade completa de exporta√ß√£o em desenvolvimento.', 'success');
            }, 1000);
        }

        // Carregar salas para filtro
        async function loadRoomsFilter() {
            try {
                const rooms = await apiCall('/rooms');
                const roomFilter = document.getElementById('roomFilter');
                
                rooms.forEach(room => {
                    const option = document.createElement('option');
                    option.value = room.room_id;
                    option.textContent = room.name;
                    roomFilter.appendChild(option);
                });
            } catch (error) {
                console.error('Erro ao carregar salas para filtro:', error);
            }
        }

        // Event listener para filtro de per√≠odo personalizado
        document.getElementById('periodFilter').addEventListener('change', function() {
            const startDate = document.getElementById('startDate');
            const endDate = document.getElementById('endDate');
            
            if (this.value === 'custom') {
                startDate.style.display = 'inline-block';
                endDate.style.display = 'inline-block';
            } else {
                startDate.style.display = 'none';
                endDate.style.display = 'none';
            }
        });

        // Inicializa√ß√£o
        window.onload = function() {
            if (checkAdminAuth()) {
                loadRoomsFilter();
                showAlert('üìà Bem-vindo √† Central de Relat√≥rios! Selecione um relat√≥rio para come√ßar.', 'info');
            }
        };
    </script>
